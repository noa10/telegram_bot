# Telegram Bot Token (Replace with your actual token from BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Mini App URL (Replace with your deployed React app URL)
MINI_APP_URL=your_mini_app_url

# Webhook URL for production (Replace with your deployed backend URL)
WEBHOOK_URL=your_backend_url

# Environment (development or production)
NODE_ENV=development

# Supabase Configuration
